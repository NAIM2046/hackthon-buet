generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// --- ১. Enum তৈরি ---
enum OrderStatus {
  PENDING
  CONFIRMED
  FAILED
  TIMEOUT
}

model Order {
  id          Int      @id @default(autoincrement())
  orderId     String   @unique
  userId      String?
  productId   String
  quantity    Int
  price       Float?
  totalAmount Float?
  
  // --- ২. Enum ব্যবহার ---
  status      OrderStatus @default(PENDING) // এখন টাইপ String নয়, OrderStatus
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}